---
import data from '../../data/bakers.json';
---
<ul class="bakers">
    {data.map((baker) => (
        <li class={`bakers-item ${baker.bakerClass}`}>
            <div class="image-wrap" opacity="0">
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" role="decorative" aria-hidden="true" viewBox="0 0 133.9 97.5" overflow="visible"><defs><pattern x="-257.8" y="-219" width="8" height="8" patternUnits="userSpaceOnUse" id="dot-pattern" viewBox="0 -8 8 8" overflow="visible"><rect y="-8" width="8" height="8" fill="none"></rect><circle cx="4.3" cy="-4" r=".7" fill="var(--color-primary)" stroke="var(--color-primary)" stroke-miterlimit="10"></circle></pattern></defs><pattern id="SVGID_1_" xlink:href="#dot-pattern" patternTransform="translate(-1.3637 4.2113)"></pattern><rect width="133.9" height="90" fill="url(#SVGID_1_)"></rect></svg>
                
                <picture>
                    <source srcset={`/assets/${baker.bakerImage}.webp`} type="image/webp">
                    <img src={`/assets/${baker.bakerImage}.jpg`} class="bakers-item__image js-baker-image" alt={`Profile picture of ${baker.bakerName}`} loading="lazy" width="385" height="385">
                </picture>
            </div>

            <div class="bakers-item__content" opacity="0">
                <h4>{baker.bakerName}, {baker.bakerAge}</h4>
                <h5>{baker.bakerJob}</h5>

                <p>{baker.bakerInfo}</p>

                <dl class="bakers-item__stats">
                    <div>
                        <dt>Star Baker</dt>
                        <dd>{baker.starBaker}</dd>
                    </div>
                    
                    <div>
                        <dt>Innuendos</dt>
                        <dd>{baker.bakerInnuendo}</dd>
                    </div>

                    <div>
                        <dt>Hollywood Handshake</dt>
                        <dd>{baker.hollywoodHandshake}</dd>
                    </div>
                </dl>
            </div>
        </li>
    ))}
</ul>

<svg class="svg">
    <clipPath id="my-clip-path" clipPathUnits="objectBoundingBox"><path d="M0,0.5 C0,0.29,0.29,0,0.5,0 S1,0.29,1,0.5 S0.71,1,0.5,1 S0,0.71,0,0.5"></path></clipPath>
</svg>

<style lang="scss">
    .bakers {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .bakers-item {
        border-radius: var(--base-radius);
        padding: 1rem;

        + .bakers-item {
            padding-top: 4.5rem;
        }
    }

    .bakers-item__image {
        clip-path: url(#my-clip-path);
        object-fit: cover;
    }

    .bakers-item__content {
        h4 {
            font-size: 3rem;
            margin: 0;
            position: relative;
            

            &:after {
                background: var(--color-accent);
                bottom: .25em;
                content: "";
                height: .4em;
                left: 0;
                position: absolute;
                right: 0;
                top: auto;
                transform: skew(-8deg);
                z-index: -1;
                bottom: .1em;
                width: clamp(30px,20vw,150px);
            }
        }

        h5 {
            font-size: 1.5em;
        }

        p {
            font-weight: 600;
            margin-top: 1.5rem;
            max-width: 45ch;
        }
    }

    .bakers-item__stats {
        display: flex;
        margin-top: 1.25em;

        > * + * {
            margin-left: 2rem;
        }
    }

    .image-wrap {
        position: relative;

        &:before {
            pointer-events: none;
            content: "";
            position: absolute;
            width: 25vw;
            height: 25vw;
            min-width: 150px;
            min-height: 150px;
            right: -4%;
            bottom: -6%;
            border-radius: 100%;
            border: solid 5px var(--color-accent);
            z-index: -1;
        }

        svg {
            border-radius: 50%;
            bottom: -2rem;
            position: absolute;
            right: -3rem;
            width: 100%;
            height: 100%;
        }
    }

    .svg {
        height: 0;
        position: absolute;
        width: 0;
    }

    @media (min-width: 768px) {
        .bakers {
            > :nth-child(2n) {
                justify-content: flex-end;
            }
        }
        .bakers-item {
            align-items: center;
            display: flex;

            > * + * {
                margin-left: 5rem;
            }

            img {
                max-width: 385px;
            }
        }
    }
</style>
